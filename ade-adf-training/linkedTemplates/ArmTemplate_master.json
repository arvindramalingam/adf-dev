{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "ade-adf-training"
		},
		"AdventureWorksLT2019_password": {
			"type": "secureString",
			"metadata": "Secure string for 'password' of 'AdventureWorksLT2019'"
		},
		"AzureBlobStorage_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'AzureBlobStorage'"
		},
		"AzureDataLakeStorage_accountKey": {
			"type": "secureString",
			"metadata": "Secure string for 'accountKey' of 'AzureDataLakeStorage'"
		},
		"AdventureWorksLT2019_properties_typeProperties_server": {
			"type": "string",
			"defaultValue": "DESKTOP-KTO8M41"
		},
		"AdventureWorksLT2019_properties_typeProperties_database": {
			"type": "string",
			"defaultValue": "AdventureWorksLT2019"
		},
		"AdventureWorksLT2019_properties_typeProperties_userName": {
			"type": "string",
			"defaultValue": "sa"
		},
		"AzureDataLakeStorage_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://adedatalaketraining.dfs.core.windows.net/"
		},
		"SelfHostedIntegrationRuntime_properties_typeProperties_linkedInfo_resourceId": {
			"type": "string",
			"defaultValue": "/subscriptions/9f7bc326-c778-429c-b2b9-6f7f1ffd15b9/resourcegroups/traningazureforbharathi/providers/Microsoft.DataFactory/factories/fdt-adf-dev/integrationruntimes/selfhostedruntime"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "ade-adf-training_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2024-03-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"AzureBlobStorage_connectionString": {
						"value": "[parameters('AzureBlobStorage_connectionString')]"
					},
					"AzureDataLakeStorage_accountKey": {
						"value": "[parameters('AzureDataLakeStorage_accountKey')]"
					},
					"AdventureWorksLT2019_password": {
						"value": "[parameters('AdventureWorksLT2019_password')]"
					},
					"AzureDataLakeStorage_properties_typeProperties_url": {
						"value": "[parameters('AzureDataLakeStorage_properties_typeProperties_url')]"
					},
					"SelfHostedIntegrationRuntime_properties_typeProperties_linkedInfo_resourceId": {
						"value": "[parameters('SelfHostedIntegrationRuntime_properties_typeProperties_linkedInfo_resourceId')]"
					},
					"AdventureWorksLT2019_properties_typeProperties_server": {
						"value": "[parameters('AdventureWorksLT2019_properties_typeProperties_server')]"
					},
					"AdventureWorksLT2019_properties_typeProperties_database": {
						"value": "[parameters('AdventureWorksLT2019_properties_typeProperties_database')]"
					},
					"AdventureWorksLT2019_properties_typeProperties_userName": {
						"value": "[parameters('AdventureWorksLT2019_properties_typeProperties_userName')]"
					}
				}
			},
			"dependsOn": []
		}
	]
}